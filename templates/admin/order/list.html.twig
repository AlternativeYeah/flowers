{% extends 'admin/starter.html.twig' %}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Список заказов</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="pull-right">
                            <a href="{{ path('admin.order.create') }}"> <button type="button" class="btn btn-primary btn-sm btn-flat">Новый заказ</button></a>
                        </div>
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>№</th>
                                <th>Имя клиента</th>
                                <th>Телефон клиента</th>
                                <th>Цена товара</th>
                                <th>Количество</th>
                                <th>Товар</th>
                                <th>Статус заказа</th>
                                <th>Удалить заказ</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                            <tr>

                                <td><a class="title" href="{{ path('admin.order.edit', {'id': order.id }) }}">{{ order.id }}</a></td>
                                <td>{{ order.clientName }}</td>
                                <td>{{ order.clientPhone }}</td>
                                <td>{{ order.price }}</td>
                                <td>{{ order.quantity }}</td>
                                <td>{{ order.flower.name }}</td>
                                <td>{{ order.status }}</td>
                                <td><a class="title" href="{{ path('admin.order.delete', {'id': order.id }) }}">Удалить</a></td>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
{% endblock %}